
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= form_for(@article) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control", rows: 15 %>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
